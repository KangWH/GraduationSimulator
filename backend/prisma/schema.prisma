generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 로그인을 위한 정보
model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  profile  Profile?
}

// 사용자의 세부 정보
model Profile {
  id                        String       @id @default(uuid())
  userId                    String       @unique
  user                      User         @relation(fields: [userId], references: [id])
  name                      String
  studentId                 String       @unique
  admissionYear             Int
  isFallAdmission           Boolean
  major                     String
  doubleMajors              String[]
  minors                    String[]
  advancedMajor             Boolean      @default(false)
  individuallyDesignedMajor Boolean      @default(false)
  simulations               Simulation[] @relation("ProfileToSimulation")
  enrollments               Json
}

// 시뮬레이션 내역
model Simulation {
  id                        String   @id @default(uuid())
  profileId                 String
  profile                   Profile  @relation("ProfileToSimulation", fields: [profileId], references: [id])
  title                     String
  updatedAt                 DateTime
  referenceYear             Int
  major                     String
  doubleMajors              String[]
  minors                    String[]
  advancedMajor             Boolean
  individuallyDesignedMajor Boolean
  courses                   Json
}

// 과목 개설 내역
model CourseOffering {
  id                 String @id @default(uuid())
  code               String
  title              String
  department         String
  category           String // 인선, 자선, 전필 등
  tags               String[] // 인선의 경우, 핵심·융합·일반, 인문 등의 분류를 기록
  credit             Int
  au                 Int

  @@unique([code, title, category, tags, credit, au])
  @@index([code])
}

// 기필, 교필, 인선 이수 요건
model GeneralEdRequirement {
  id           String @id @default(uuid())
  year         Int
  type         String // COMMON, BR, MGC, HSE, HSE_D
  requirements Json

  @@unique([year, type])
  @@index([year, type])
}

// 학과별 기필, 연구, 전공 이수 요건
model MajorRequirement {
  id           String @id @default(uuid())
  year         Int
  department   String
  type         String // BE, BE_D, Major, DoubleMajor, Minor, AdvancedMajor, RS, RS_D
  requirements Json

  @@unique([year, department, type])
  @@index([year, department, type])
}
